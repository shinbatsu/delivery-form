root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

[*.html]
indent_style = tab
indent_size = 4
max_line_length = 120

[*.css]
indent_style = tab
indent_size = 4
max_line_length = 120

[*.js]
indent_style = tab
indent_size = 4
quote_type = single
max_line_length = 120

[*.md]
trim_trailing_whitespace = false
insert_final_newline = true
